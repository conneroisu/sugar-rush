{
	"compilerOptions": {
		"outDir": "./dist", 
		"types": [
			"node"
		],
		"resolveJsonModule": true,
		"baseUrl": ".",
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"strict": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": [
		"**/*.ts",
		"**/globals.d.ts",
		"**/*.js",
		"**/*.ts"
	]
}
